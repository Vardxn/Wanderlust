<% const place=(listing.location || '' ) + ' ' + (listing.country || '' ); %>
    <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-reset">
            <div class="card border-0 rounded overflow-hidden h-100 property-card">
                <div class="card-img-top-wrapper position-relative" style="padding-bottom: 100%;">
                    <img src="<%= unsplashForPlace(place, ['hotels','restaurants','cafes']) %>"
                        class="card-img-top position-absolute top-0 start-0 w-100 h-100"
                        style="object-fit: cover; border-radius: 12px;" alt="<%= listing.title %>"
                        onerror="this.onerror=null; this.src='<%= unsplashForPlace(place, ['travel','city','landmark']) %>'">
                </div>
                <div class="card-body px-0 pt-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <h5 class="card-title mb-0 fw-bold">
                            <%= listing.title %>
                        </h5>
                        <div class="rating">
                            <i class="fas fa-star"></i>
                            <span>4.8</span>
                        </div>
                    </div>
                    <p class="text-muted mb-2">
                        <%= listing.location %>, <%= listing.country %>
                    </p>
                    <p class="mb-0"><span class="fw-bold">â‚¹<%= listing.price %></span> night</p>
                </div>
            </div>
        </a>
    </div>