<% layout('../layouts/boilerplate') %>

    <main class="container mt-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>"
                        style="height: 400px; object-fit: cover;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h1 class="card-title mb-2">
                                    <%= listing.title %>
                                </h1>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    <%= listing.location %>, <%= listing.country %>
                                </p>
                            </div>
                            <div class="text-end">
                                <h3 class="text-primary mb-0">â‚¹<%= listing.price.toLocaleString("en-IN") %>
                                </h3>
                                <small class="text-muted">per night</small>
                            </div>
                        </div>
                        <p class="card-text">
                            <%= listing.description %>
                        </p>

                        <div class="d-flex gap-2 mt-4">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline"
                                onsubmit="return confirm('Are you sure you want to delete this listing?')">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Reviews Section -->
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-star text-warning me-2"></i>Reviews (<%= listing.reviews.length %>)
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (listing.reviews.length> 0) { %>
                            <% listing.reviews.forEach(review=> { %>
                                <div class="review-item mb-3 pb-3 border-bottom">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="rating-stars">
                                            <% for (let i=1; i <=5; i++) { %>
                                                <i
                                                    class="fas fa-star <%= i <= review.rating ? 'text-warning' : 'text-muted' %>"></i>
                                                <% } %>
                                        </div>
                                        <small class="text-muted">
                                            <%= new Date(review.createdAt).toLocaleDateString() %>
                                        </small>
                                    </div>
                                    <p class="mb-2"><strong>
                                            <%= review.author || 'Anonymous' %>
                                        </strong></p>
                                    <p class="mb-2">
                                        <%= review.comment %>
                                    </p>
                                    <form method="POST"
                                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                        class="d-inline" onsubmit="return confirm('Delete this review?')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p class="text-muted mb-0">No reviews yet. Be the first to leave a review!
                                        </p>
                                        <% } %>
                    </div>
                </div>

                <!-- Add Review Form -->
                <div class="card mt-4">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="fas fa-plus me-2"></i>Add Your Review</h6>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate>
                            <div class="mb-3">
                                <label for="rating" class="form-label">Rating <span class="text-danger">*</span></label>
                                <div class="rating-input">
                                    <input type="hidden" name="rating" id="rating" required>
                                    <div class="stars">
                                        <% for (let i=1; i <=5; i++) { %>
                                            <i class="far fa-star star-rating" data-rating="<%= i %>"></i>
                                            <% } %>
                                    </div>
                                </div>
                                <div class="invalid-feedback">Please select a rating.</div>
                            </div>

                            <div class="mb-3">
                                <label for="comment" class="form-label">Review <span
                                        class="text-danger">*</span></label>
                                <textarea class="form-control" id="comment" name="comment" rows="4" required
                                    minlength="10" maxlength="500" placeholder="Share your experience..."></textarea>
                                <div class="invalid-feedback">Review must be between 10-500 characters.</div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-paper-plane me-2"></i>Submit Review
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Star rating functionality
        const stars = document.querySelectorAll('.star-rating');
        const ratingInput = document.getElementById('rating');
        let currentRating = 0;

        stars.forEach(star => {
            star.addEventListener('click', function () {
                const rating = parseInt(this.dataset.rating);
                currentRating = rating;
                ratingInput.value = rating;

                // Update star display
                stars.forEach((s, index) => {
                    if (index < rating) {
                        s.classList.remove('far');
                        s.classList.add('fas', 'text-warning');
                    } else {
                        s.classList.remove('fas', 'text-warning');
                        s.classList.add('far');
                    }
                });
            });

            star.addEventListener('mouseover', function () {
                const rating = parseInt(this.dataset.rating);
                stars.forEach((s, index) => {
                    if (index < rating) {
                        s.classList.add('text-warning');
                    }
                });
            });

            star.addEventListener('mouseout', function () {
                if (currentRating === 0) {
                    stars.forEach(s => s.classList.remove('text-warning'));
                } else {
                    stars.forEach((s, index) => {
                        if (index >= currentRating) {
                            s.classList.remove('text-warning');
                        }
                    });
                }
            });
        });

        // Form validation
        const form = document.querySelector('form');
        form.addEventListener('submit', function (e) {
            if (!ratingInput.value) {
                e.preventDefault();
                ratingInput.setCustomValidity('Please select a rating');
                ratingInput.reportValidity();
            } else {
                ratingInput.setCustomValidity('');
            }
        });
    </script>