<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wanderlust - Find your next stay</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/CSS/styles.css">
</head>

<body>
    <!-- Include navbar -->
    <%- include('../includes/navbar'); %>

        <main class="container listing-grid">
            <h1 class="section-title">Stay anywhere</h1>
            <a href="/listings/new" class="btn add-listing-btn mb-4">
                <i class="fas fa-plus me-2"></i>Add New Listing
            </a>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <% for(let listing of allListings) { %>
                    <div class="col">
                        <div class="listing-card card h-100">
                            <a href="/listings/<%= listing._id %>" class="text-decoration-none">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                            </a>
                            <div class="listing-card-body card-body">
                                <div class="card-rating">
                                    <i class="fas fa-star star-icon"></i>
                                    <span>4.8 (127)</span>
                                </div>
                                <h5 class="card-title">
                                    <%= listing.title %>
                                </h5>
                                <p class="card-location">
                                    <%= listing.location %>, <%= listing.country %>
                                </p>
                                <p class="card-description">
                                    <%= listing.description %>
                                </p>
                                <p class="card-price">â‚¹<%= listing.price.toLocaleString("en-IN") %> <span
                                            style="font-weight: 400; color: #717171;">night</span></p>
                                <div class="d-flex gap-2">
                                    <a href="/listings/<%= listing._id %>"
                                        class="btn btn-outline-dark btn-sm flex-fill">View</a>
                                    <a href="/listings/<%= listing._id %>/edit"
                                        class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </main>

        <!-- Include footer -->
        <%- include('../includes/footer'); %>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>