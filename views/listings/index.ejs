<% layout('../layouts/boilerplate') %>

    <div class="container py-4">
        <!-- Simple Header -->
        <header class="mb-4 text-center">
            <h1>Find your next stay</h1>
            <p class="text-muted">Browse our collection of unique accommodations</p>
        </header>

        <!-- Simple Grid of Listings -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            <% for(let listing of listings) { %>
                <div class="col">
                    <div class="card h-100">
                        <!-- Image -->
                        <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1560448204-603b3fc33ddc?q=80&w=1470&auto=format&fit=crop' %>"
                            class="card-img-top" style="height: 180px; object-fit: cover;" alt="<%= listing.title %>">

                        <div class="card-body">
                            <!-- Title -->
                            <h5 class="card-title text-truncate">
                                <%= listing.title %>
                            </h5>

                            <!-- Location -->
                            <p class="card-text text-muted">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                <%= listing.location %>, <%= listing.country %>
                            </p>

                            <!-- Price -->
                            <p class="card-text">
                                <strong>â‚¹<%= listing.price.toLocaleString("en-IN") %></strong> <span
                                    class="text-muted">per night</span>
                            </p>

                            <!-- View Button -->
                            <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary">View
                                Details</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <script>
        // Simple script to handle image loading errors
        document.addEventListener('DOMContentLoaded', function () {
            const images = document.querySelectorAll('.card-img-top');
            images.forEach(img => {
                img.onerror = function () {
                    this.src = 'https://images.unsplash.com/photo-1560448204-603b3fc33ddc?q=80&w=1470&auto=format&fit=crop';
                }
            });
        });
    </script>