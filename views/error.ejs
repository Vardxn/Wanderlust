<% layout('../layouts/boilerplate') %>

    <div class="container py-5">
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
            </div>
            <div class="bg-danger text-white p-3 rounded mb-4 d-inline-block">
                <h1 class="h2 mb-0">Error <%= statusCode || 500 %>
                </h1>
            </div>
            <p class="lead mb-4">
                <%= message || 'An unexpected error occurred' %>
            </p>
            <div>
                <a href="/listings" class="btn btn-primary me-3">
                    <i class="fas fa-home me-2"></i>Go Home
                </a>
                <button onclick="history.back()" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Go Back
                </button>
            </div>
        </div>
    </div>